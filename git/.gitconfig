[user]
  name = José Araújo
  email = sooskca@gmail.com
[credential]
  helper = cache
[apply]
  whitespace = nowarn
[branch]
  autosetupmerge = always
[color]
  status = auto
  diff = auto
  branch = auto
  interactive = auto
  ui = true
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[core]
  excludesfile = ~/.gitignore
  quotepath = false
  trustctime = false
  pager = less -FRSX
  editor = nvim
[alias]
  graph = log --graph --color --pretty=format:"%C(yellow)%H%C(green)%d%C(reset)%n%x20%cd%n%x20%cn%x20(%ce)%n%x20%s%n"
  stat = status -sb
  last = log -1 --stat
  unstage = reset HEAD --
  cached = diff --cached
	d = difftool
[mergetool]
  prompt = false
[diff]
	tool = vimdiff
[difftool]
	prompt = false
[github]
  user = sooskca
[grep]
  lineNumber = true
[push]
  default = simple
[fetch]
  prune = true
[rebase]
  autosquash = true
[commit]
  template = ~/.gitmessage
