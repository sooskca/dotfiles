[user]
  name = José Araújo
  email = sooskca@gmail.com
[apply]
  whitespace = nowarn
[branch]
  autosetupmerge = always
[color]
  status = auto
  diff = auto
  branch = auto
  interactive = auto
  ui = true
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[core]
  excludesfile = ~/.gitignore
  quotepath = false
  trustctime = false
  pager = less
  editor = nvim
[alias]
  graph = log --graph --color --pretty=format:%C(yellow)%H%C(green)%d%C(reset)%n%x20%cd%n%x20%cn%x20(%ce)%n%x20%s%n
  stat = status -sb
  last = log -1 --stat
  unstage = reset HEAD --
  cached = diff --cached
  d = difftool
  append = town append
  hack = town hack
  kill = town kill
  new-pull-request = town new-pull-request
  prepend = town prepend
  prune-branches = town prune-branches
  rename-branch = town rename-branch
  repo = town repo
  ship = town ship
  sync = town sync
[diff]
tool = nvimdiff
[difftool "nvimdiff"]
    cmd = nvim -d $LOCAL $REMOTE
[merge]
	tool = nfugitive
[mergetool]
  prompt = false
  path = nvim
[mergetool "nvimmerge"]
  cmd = nvim -d $LOCAL $BASE $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[mergetool "nfugitive"]
  cmd = nvim -f -c "Gdiff" "$MERGED"
[github]
  user = sooskca
[grep]
  lineNumber = true
[push]
  default = simple
[fetch]
  prune = true
[rebase]
  autosquash = true
  autoStash = false
[commit]
  template = ~/.gitmessage
[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
[pull]
  rebase = false
[credential "helperselector"]
  selected = manager
[gui]
  encoding = UTF-8
  editor = C:\\Tools\\Neovim\\bin\\nvim-qt.exe
